
<p>
  <H2>
  <%= link_to post.title, post %>
  </H2>
</p>

<p>
  <% if post.kind =='image' %>
  	<%= image_tag "https://www.bankofamerica.com/content/images/ContextualSiteGraphics/CreditCardArt/en_US/Approved_PCM/8beb_cshsigcm_v_250x158.png", style: "width: 100%"%>
  <% else %>
  	<%= simple_format post.content %>
  <% end %>

</p>
<p>
 <small>
   Posted on <%= post.created_at.to_formatted_s(:long) %>
 </small>
</p>
