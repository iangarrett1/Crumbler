<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Apr</th>
      <th>Cash back</th>
      <th>Travel</th>
      <th>Balance trasfer</th>
      <th>Annual fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.title %></td>
        <td><%= credit_card.apr %></td>
        <td><%= credit_card.cash_back %></td>
        <td><%= credit_card.travel %></td>
        <td><%= credit_card.balance_trasfer %></td>
        <td><%= credit_card.annual_fee %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

